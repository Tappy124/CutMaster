<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BarberPOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use barber palette mapped to Material tokens -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <!-- Use android namespace for background to avoid resolution issues -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Make status bar slightly darker blue -->
        <item name="android:statusBarColor">@color/barber_blue_dark</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Use MaterialComponents ripple accent for touch targets -->
        <item name="android:colorAccent">@color/barber_red</item>
    </style>

    <style name="Theme.BarberPOS" parent="Base.Theme.BarberPOS" />

    <!-- Splash theme that shows the logo as window background for fast startup -->
    <style name="Theme.BarberPOS.Splash" parent="Theme.BarberPOS">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>